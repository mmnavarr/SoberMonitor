<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cyberplays.sobermonitor.SelectRandomActivity"
    android:id="@+id/select_random"
    android:background="@color/background_material_dark">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/number"
        android:text="@string/number"
        android:layout_marginTop="57dp"
        android:textSize="230sp"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/range"
        android:id="@+id/range"
        android:background="#33CCFF"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_below="@+id/number"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:width="150dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/numbersel"
        android:id="@+id/numbersel"
        android:background="#33CCFF"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_alignTop="@+id/range"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/range" />
</RelativeLayout>
